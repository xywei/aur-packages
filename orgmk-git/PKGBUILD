# Maintainer: csllbr

_pkgname=orgmk
pkgname=orgmk-git
pkgver=r77.2fa2bde
pkgrel=1
pkgdesc='Export Org mode documents to HTML, PDF, etc.'
url='https://github.com/fniessen/orgmk'
license=('GPL')
source=('git+https://github.com/fniessen/orgmk.git')
sha256sums=('SKIP')
arch=('any')
depends=('emacs')
makedepends=('git')
provides=('orgmk')

pkgver() {
  cd "${srcdir}/${_pkgname}"

  # Get the version number.
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "${srcdir}/${_pkgname}"

  # Fix PWD for sources of symlinks
  sed -i '/PWD=\$(shell\ pwd)/c\PWD=\/usr\/share\/orgmk' Makefile

  # Fix ORGMK_ROOT which gets hard-coded into emacs-lisp scripts
  sed -i '/ORGMK_ROOT=\$(PWD)/c\ORGMK_ROOT=\/usr\/share\/orgmk' Makefile

  # Fix BIN_DIR for destinations of symlinks
  sed -i '/BIN_DIR=\/usr\/local\/bin/c\BIN_DIR=\/usr\/bin' Makefile

  make
}

package() {
  mkdir -p "${pkgdir}"/usr/share/orgmk
  mkdir -p "${pkgdir}"/usr/bin
  cd "${srcdir}"

  cp -R ${_pkgname}/* "${pkgdir}"/usr/share/orgmk

  cd /usr/share/orgmk
  make install
}
